<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ClientDetailActivity"
    android:background="@color/darkgrey">

    <EditText
        android:id="@+id/etClientName"
        android:hint="Nombre"
        style="@style/EditTextClientDetail"
        android:inputType="text"/>


    <EditText
        android:id="@+id/etClientSurname"
        android:layout_below="@id/etClientName"
        android:hint="Apellido"
        style="@style/EditTextClientDetail"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etClientAddress"
        android:layout_below="@id/etClientSurname"
        android:hint="Dirección"
        style="@style/EditTextClientDetail"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etClientPhone"
        android:layout_below="@id/etClientAddress"
        android:hint="Teléfono"
        style="@style/EditTextClientDetail"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/etClientEmail"
        android:layout_below="@id/etClientPhone"
        android:hint="Email"
        style="@style/EditTextClientDetail"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etClientNotes"
        android:layout_below="@id/etClientEmail"
        android:hint="Notas"
        style="@style/EditTextClientDetail"
        android:inputType="textMultiLine"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etClientNotes"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btModifyClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modificar cliente"
            android:textColor="@color/lightgrey"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btDeleteClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar cliente"
            android:textColor="@color/lightgrey"
            android:fontFamily="@font/roboto_medium"/>

    </LinearLayout>

</RelativeLayout>
