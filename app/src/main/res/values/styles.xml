<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="viewCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="EditTextClientDetail" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">""</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="EditTextClientRegister" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">""</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>